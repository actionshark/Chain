<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:chain="http://schemas.android.com/apk/res/com.as.chain"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_display"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3"
		android:gravity="center"
		android:textSize="16sp"
		android:visibility="invisible" />

	<TextView
		android:id="@+id/tv_buffer"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
		android:gravity="center"
		android:textSize="10sp" />

	<com.as.chain.ui.ProgressBar
		android:id="@+id/pb_health"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		chain:start_color="#ff0000"
		chain:end_color="#00bb00" />

	<com.as.chain.ui.ProgressBar
		android:id="@+id/pb_shield"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		chain:start_color="#aaaaaa" />

	<TextView
		android:id="@+id/tv_name"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="8"
		android:gravity="center"
		android:textSize="16sp"
		android:lineSpacingExtra="0dp"
		android:lineSpacingMultiplier="0.82" />
</LinearLayout>