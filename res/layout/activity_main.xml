<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:stone="http://schemas.android.com/apk/res-auto"
	android:id="@+id/vg_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:background="@color/main_bg">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<com.stone.metro.MetroLayout
			android:id="@+id/ml_roleinfo"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="vertical"
			stone:color="@color/metro_nor"
			stone:color_pressed="@color/metro_pre">

			<TextView
				android:id="@+id/tv_nickname"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:paddingLeft="20dp"
				android:paddingBottom="10dp"
				android:gravity="left|bottom"
				android:textSize="@dimen/main_text_small"
				android:textColor="@color/main_text" />

			<TextView
				android:id="@+id/tv_address"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:paddingLeft="20dp"
				android:paddingTop="10dp"
				android:gravity="left|top"
				android:textSize="@dimen/main_text_small"
				android:textColor="@color/main_text"
				android:text="192.168.0.1" />

		</com.stone.metro.MetroLayout>

		<com.stone.metro.MetroLayout
		    android:id="@+id/ml_hero"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			stone:color="@color/metro_nor"
			stone:color_pressed="@color/metro_pre">

		</com.stone.metro.MetroLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<com.stone.metro.MetroLayout
		    android:id="@+id/ml_src"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			stone:color="@color/metro_nor"
			stone:color_pressed="@color/metro_pre">

		</com.stone.metro.MetroLayout>

		<com.stone.metro.MetroLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			stone:color="@color/metro_nor"
			stone:color_pressed="@color/metro_pre">

		</com.stone.metro.MetroLayout>

	</LinearLayout>

</LinearLayout>
