<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:stone="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_bg"
	android:orientation="vertical">

	<com.as.metro.MetroLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		stone:color="@color/metro_nor"
		stone:color_pressed="@color/metro_pre">

		<TextView
			android:id="@+id/tv_message"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:textSize="@dimen/main_text_normal"
			android:textColor="@color/main_text" />

		<EditText
			android:id="@+id/et_input"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:layout_margin="10dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:gravity="left|center_vertical"
			android:textSize="20sp"
			android:textColor="@color/main_text"
			android:singleLine="true"
			android:hint="" />
	</com.as.metro.MetroLayout>

	<LinearLayout
		android:id="@+id/ll_button"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal">

		<com.as.metro.MetroLayout
			android:id="@+id/ml_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			stone:color="@color/metro_nor"
			stone:color_pressed="@color/metro_pre">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:textSize="@dimen/main_text_normal"
				android:textColor="@color/main_text"
				android:text="@string/wd_cancel" />
		</com.as.metro.MetroLayout>

		<com.as.metro.MetroLayout
			android:id="@+id/ml_confirm"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			stone:color="@color/metro_nor"
			stone:color_pressed="@color/metro_pre">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:textSize="@dimen/main_text_normal"
				android:textColor="@color/main_text"
				android:text="@string/wd_confirm" />
		</com.as.metro.MetroLayout>

	</LinearLayout>

</LinearLayout>
